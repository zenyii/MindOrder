
form{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 80px 0;
}
.inputGradient{
    width: 60vw;
    height: 45px;
    border-radius: 5px;
    background:linear-gradient(to right ,#4880ff,#0fccA6);
    padding: 2px;
    box-sizing: border-box;
    position: relative;
    margin: 30px 0;
}
.inputGradient::before{
    content: '房 号 ';
    position: absolute;
    display: inline-block;
    top: 0;
    left: -40px;
    font-size: 15px;
    line-height: 45px;
}
#roomId{
    width: 100%;
    height: 41px;
    border-radius: 5px;
    border: 2px soild transparent;
    background-color: white;
    padding:0 5px;
    box-sizing: border-box;
    font-size: 15px;
    min-height: 41px;
}


.joinRoom{
    width: 60vw;
    height:45px;
    line-height: 45px;
    margin: 10px 0;
    color: white;
    font-size: 14px;
    letter-spacing: 2px;
    background-color: #4880ff;
    box-shadow: 1px 1px 13px 1px #4880ff;
}
button,#roomId{
    letter-spacing: 2px;
}
button::after {
    border: none;
}
@media(min-width:768px){
    .inputGradient{
        height: 1.51rem;
    }
    .inputGradient::before{
        line-height: 1.51rem;
    }
    #roomId{
        height: 1.4rem;
        font-size: 18px;
    }
    .joinRoom{
        height:1.51rem;
        line-height: 1.51rem;
        font-size: 16px;
    } 
}