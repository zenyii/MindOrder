page {
    margin: 0;
    padding: 0;
    background-color: #ccc;
}

.header {
    width: 100%;
    height: 20vh;
    text-align: center;
    background-size: 100% 100%;
}

.header image {
    display: inline-block;
    width: 60px;
    height: 60px;
}

.main {
    height: 65vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.join, .brain {
    width: 60vw;
    height: 45px;
    line-height: 45px;
    margin: 10px 0;
    color: white;
    font-size: 14px;
    letter-spacing: 2px;
}

button::after {
    border: none;
}

.join {
    background-color: #4880ff;
    box-shadow: 1px 1px 13px 1px #4880ff;
}

.brain {
    background-color: #0fcca6;
    box-shadow: 1px 1px 13px 1px #14B292;
}

@media(min-width:768px){
    .join, .brain {
        height: 1.51rem;
        line-height: 1.51rem;
        font-size: 16px;
    }
  }