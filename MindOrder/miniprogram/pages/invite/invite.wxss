button, #roomId {
  letter-spacing: 2px;
}

button::after {
  border: none;
}

.hr {
  width: 90%;
  height: 1px;
  background: #ccc;
  margin: 0 auto;
  transform: scaleY(0.5);
}

.pannel {
  display: block;
  padding: 10rpx 0rpx;
  text-align: center;
}

.qr-container {
  display: block;
  border: none;
  text-align: center;
  width: 100%;
  height: 400rpx;
  padding-left: 50%;
}

.qr-image {
  display: block;
  width: 400rpx;
  height: 400rpx;
  border: 0px solid black;
  margin-left: -200rpx;
}

@media(min-width:768px){
  .roomId {
    margin-left: 85px;
  }
  .buildRoom, .invitePeople, .generCode {
    height: 60px;
    line-height: 60px;
  }
  
}