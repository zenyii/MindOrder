 page {
   margin: 0;
   padding: 0;
   box-sizing: border-box;
   background: #f2f2f2;
 }

 .info {
   width: 100%;
   text-align: center;
   font-size: 12px;
   color: gray;
 }

 .buttonBlock {
   margin-top: 20px;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
 }

 button::after {
   border: none;
 }

 .buttonReady {
   background-color: #4880ff;
   box-shadow: 4px 6px 10px -4px #6188ff;
   width: 60vw;
   height: 45px;
   line-height: 45px;
   margin: 10px 0;
   color: white;
   font-size: 14px;
   letter-spacing: 2px;
 }

 .header {
   margin: 8px 7%;
 }

 .title {
   font-size: 15px;
   color: white;
 }

 .hidden {
   display: none;
 }

 image, .map {
   display: inline-block;
   width: 50px;
   height: 50px;
   border-radius: 50%;
 }

 .peopleList {
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
 }

 .peopleItem {
   width: 25%;
   height: 70px;
   position: relative;
   display: flex;
   justify-content: center;
   padding-top: 2px;
 }

 .imgPart {
   position: absolute;
   overflow: visible;
 }

 .headImg {
   position: relative;
 }

 .map {
   color: white;
   background: rgba(0, 0, 0, .4);
   position: absolute;
   top: 0;
   left: 0;
 }

 .houseHolder {
   width: 56px;
   height: 56px;
   position: absolute;
   top: -2px;
   left: -3px;
   display: inline-block;
   z-index: 100;
 }

 .delete {
   position: absolute;
   right: -7px;
   top: 0;
   width: 12px;
   height: 12px;
   box-sizing: border-box;
 }

 .number {
   border-radius: 6px;
   border: 1px solid black;
 }

 .nickName {
   text-align: center;
   font-size: 12px;
   position: absolute;
   bottom: 0;
   height: 20px;
 }

 button::after {
   border: none;
 }

 button.invite {
   padding: 0;
   margin-left: 5%;
   width: 50px;
   height: 50px;
 }

