 .main {
   width: 100%;
   display: flex;
   justify-content: center;
   align-items: center;
 }

 .swiperOuter {
   width: 90%;
   position: relative;
   background: white;
   border-radius: 2%;
   box-shadow: 1px 2px 8px gray;
   margin-bottom: 10px;
 }

 .circle {
   width: 40px;
   height: 40px;
   border-radius: 50%;
   background: white;
   position: absolute;
   top: 15px;
   bottom: 0;
   left: 0;
   right: 0;
   margin: auto;
   z-index: 1;
 }

 #chevron {
   position: relative;
   text-align: center;
   background: lightblue;
   height: 40px;
   width: 100%;
   border-radius: 5% 5% 0 0;
   top: -6px;
 }

 #chevron::before {
   content: '';
   width: 51%;
   height: 20px;
   position: absolute;
   top: 70%;
   left: 0;
   background: lightblue;
   -webkit-transform: skew(0deg, 6deg);
   -moz-transform: skew(0deg, 6deg);
   -ms-transform: skew(0deg, 6deg);
   -o-transform: skew(0deg, 6deg);
   transform: skew(0deg, 6deg);
   box-shadow: inset 0 -6px 5px -5px gray;
 }

 #chevron::after {
   content: '';
   width: 50%;
   height: 20px;
   position: absolute;
   top: 70%;
   right: 0;
   background: lightblue;
   -webkit-transform: skew(0deg, -6deg);
   -moz-transform: skew(0deg, -6deg);
   -ms-transform: skew(0deg, -6deg);
   -o-transform: skew(0deg, -6deg);
   transform: skew(0deg, -6deg);
   box-shadow: inset 0 -6px 5px -5px gray;
 }

 .outer {
   width: 100%;
   height: 5px;
   background: blue;
   border-radius: 5px 5px 0 0;
   position: relative;
   top: -4px
 }

 .outerr {
   width: 100%;
   height: 5px;
   background: lightgreen;
   border-radius: 5px 5px 0 0;
   position: relative;
   top: -2px
 }

 .outerrr {
   width: 100%;
   height: 5px;
   background: yellow;
   border-radius: 5px 5px 0 0;
   position: relative;
 }

 .contain {
   width: 100%;
   /*  height: 150px; */
   height: 210px;
   position: relative;
   bottom: 0px;
   padding: 25px 20px;
   box-sizing: border-box;
 }

 /*用来包裹所有的小圆点  */

 .dots {
   height: 10rpx;
   display: flex;
   flex-direction: row;
   position: absolute;
   left: 0;
   right: 0;
   margin: auto;
   bottom: 40rpx;
 }

 /*未选中时的小圆点样式 */

 .dot {
   width: 50rpx;
   height: 10rpx;
   background-color: lightgray;
 }

 /*选中以后的小圆点样式  */

 .active {
   background-color: #4880ff;
 }

 .tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  overflow: visible;
  padding-top: 5px;
  border-top: #f2f2f2;
}


.tab-bar-item,.bar1 {
  overflow: visible;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .image {
  width: 20px;
  height: 20px;
  overflow: visible;
}
.bar1 .image {
  width: 46px;
  height: 65px;
  position: absolute;
  margin: 0 auto;
  bottom: 20px;
  z-index: 2;

}
.bar1 .image::after,.bar1 .image::before {
  content: '';
  display: inline-block;
  width:  1px;
  height: 38px;
  position: absolute;
  /* transform: rotate(45deg); */
  /* border-style: solid;
  border-width: 20px;
  border-color: transparent transparent transparent transparent; */
  z-index: -1;

}
.bar1 .image::after{
  height: 38px;
  right: 44px;
  transform: rotate(35deg);
  box-shadow: 40px 0px 6px  #06023f;
  bottom: 19px; 
}
.bar1 .image::before{
  height: 40px;
  left: 38px;
  transform: rotate(-35deg);
  box-shadow: -30px 0px 5px  #06023f;
  bottom: 9px; 
}
.tab-bar-item .view {
  margin: 5px 0;
  font-size: 10px;


}

