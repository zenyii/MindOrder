 page {
   margin: 0;
   padding: 0;
   box-sizing: border-box;
   background: #ccc;
 }

 .title {
   font-size: 16px;
 }

 .hidden {
   display: none;
 }

 image {
   display: inline-block;
   width: 50px;
   height: 50px;
   border-radius: 50%;
 }

 .peopleList {
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
 }
 .peopleItem{
  width:25%;
  height: 70px;
  position: relative;
  display: flex;
  justify-content: center;
 }

 .imgPart {
   position: absolute;
 }

 .headImg {
   position: relative;
 }

 .map {
   color: white;
   width: 100%;
   height: 100px;
   background: rgba(0, 0, 0, .2);
   position: absolute;
   top: 0;
   left: 0;
   text-align: center;
   line-height: 100px;
 }

 .houseHolder {
   width: 16px;
   height: 16px;
   position: absolute;
   top: -2px;
   left: 5px;
   display: inline-block;
   z-index: 1;
 }

 .delete {
   position: absolute;
   right: -7px;
   top: 0;
   width: 12px;
   height: 12px;
   box-sizing: border-box;
 }

 .number {
   border-radius: 6px;
   border: 1px solid black;
 }

 .nickName {
   text-align: center;
   font-size: 12px;
 }

 button::after {
   border: none;
 }

