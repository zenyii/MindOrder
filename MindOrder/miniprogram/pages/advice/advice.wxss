/* miniprogram/pages/advice/advice.wxss */
page{
  width: 100%;
  height: 100%;
  background: rgb(221, 223, 222);
}

.paperback{
  width: 100%;
  height: 55%;
  -webkit-filter: drop-shadow(0px 10px 10px #000);
  filter: drop-shadow(2px 5px 3px rgb(164, 167, 167));
  z-index: 2;
  margin-top: 100rpx;
}

.paper{
  background: white;
  width: 90%;
  height: 100%;
  top: 0;
  margin: auto;
  clip-path: polygon(0% 0%,100% 0%,100% 100%,15% 100%,0% 85%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.paper:before{
  background: rgb(221, 220, 236);
  height: 15%;
  width: 15%;
  position: absolute;
  top: 85%;
  left: 2%;
  content: '';
  box-shadow: 5rpx 0rpx 6rpx rgb(129, 126, 126);
  border-radius: 10rpx;
}

#word{
  font-size: 40rpx;
  width: 100%;
  height: 100%;
}

.submit{
  background: rgb(73, 128, 255);
  color:white;
  margin-top: 100rpx;
  width: 90%;
  height: 8%;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}