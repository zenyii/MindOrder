#prepareTime,#writeTime{
    position: relative;
    width: 58.8vw;
    height: 41px;
    border-radius: 4px;
    border: 2px soild transparent;
    background-color: white;
    padding:0 5px;
    box-sizing: border-box;
    font-size: 16px;
    min-height: 41px;
    line-height: 41px;
}
.placeHolderPre::before{
    content: "请输入准备时长";
    padding-bottom: 1px;
}
.placeHolderWri::before{
    content: "请输入讨论时长";
    padding-bottom: 1px;
}
.placeHolderPre::before,.placeHolderWri::before{
    position: absolute;
    bottom: 0;
    line-height: 41px;
    left: 5px;
    color: gray;
    font-size: 14px;
}


