/* miniprogram/pages/report/report.wxss */

page {
    margin: 0;
    padding: 0;
    background-color: #f2f2f2;
}

.header {
    width: 100%;
    height: 44vh;
    background: white;
    padding-bottom: 30px;
    box-sizing: border-box;
    margin-bottom: 7px;
}

.titleMsg {
    width: 100%;
    height: 23%;
    position: relative;
    padding: 10px 5px;
}

.titleMsg image {
    display: inline-block;
    width: 18px;
    height: 18px;
    margin: 0 2px;
}

.titleMsg .title {
    font-size: 18px;
}

.titleMsg .date {
    font-size: 14px;
    color: gray;
    margin: 1px 0;
    margin-left: 22px;
}

.titleMsg .button {
    position: absolute;
    /*    background: linear-gradient(to left, 30deg, #4880ff, #4ab1d5); */
    background: linear-gradient(to right, #4880ff ,#4880ff ,#4880ff,#4ab1d5);
    color: white;
    border-radius: 5pt;
    width: 75px;
    height: 40px;
    right: 30px;
    top: 20px;
    text-align: center;
    line-height: 40px;
    padding-left: 3px;
    box-sizing: border-box;
    font-size: 18px;
    letter-spacing: 1px;
    box-shadow: 2px 3px 5px -2px #6188ff;
}

.iconfont {
    font-weight: bold;
}
.display{
    height: 77%;
    display: flex;
    justify-content: center;
}
.circle{
    width: 350rpx;
    height: 350rpx;
    background-size: 100% 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    font-size: 16px;
}
.text{
    margin:0 auto;
}

.markKing{
    height: 15vh;
    background: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 5px;
}
.avatar{
    width: 40px;
    height: 40px;
    position: relative;
    margin:0 auto;
}
.avatar image{
    display: inline-block;
    width: 40px;
    height: 40px;
    border-radius: 50%;
}
.map{
    display: inline-block;
    position: absolute;
    top: -2px;
    left: -2px;
    width: 44px;
    height: 44px;
    z-index: 1;
    background: no-repeat;
    background-size: 100% 100%;
}
.tips{
    font-size: 14px;
    margin: 10px auto;
    position: relative;
}
.tips .nums{
    position: absolute;
    right: -28px;
    font-size: 14px;
    color: #f6da2e;

   /*  margin-left: 2px; */
}
