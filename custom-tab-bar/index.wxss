.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  overflow: visible;
  padding-top: 5px;
  border-top: #ccc;
}


.tab-bar-item,.bar1 {
  overflow: visible;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .image {
  width: 20px;
  height: 20px;
  overflow: visible;
}
.bar1 .image {
  width: 46px;
  height: 65px;
  position: absolute;
  margin: 0 auto;
  bottom: 20px;
  z-index: 2;

}
.bar1 .image::after,.bar1 .image::before {
  content: '';
  display: inline-block;
  width:  1px;
  height: 38px;
  position: absolute;
  /* transform: rotate(45deg); */
 
  /* border-style: solid;
  border-width: 20px;
  border-color: transparent transparent transparent transparent; */
 
  z-index: -1;

}
.bar1 .image::after{
  height: 38px;
  right: 44px;
  transform: rotate(35deg);
  box-shadow: 40px 0px 6px  #06023f;
  bottom: 19px; 
}
.bar1 .image::before{
  height: 40px;
  left: 38px;
  transform: rotate(-35deg);
  box-shadow: -30px 0px 5px  #06023f;
  bottom: 9px; 
}
.tab-bar-item .view {
  margin: 5px 0;
  font-size: 10px;
}

